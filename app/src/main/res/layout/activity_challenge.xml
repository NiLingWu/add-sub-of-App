<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1"
    tools:context="com.example.wendy.test2.ChallengeActivity"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2CA1D0">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="小学生加减法"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:id="@+id/view" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_shi"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:paddingVertical="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_in2"
        app:layout_constraintStart_toStartOf="parent" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:drawableLeft="@mipmap/time1"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ans"
        android:layout_width="112dp"
        android:layout_height="24dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="632dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="80dp"
        android:padding="5dp"
        android:text="正确个数：0"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_marginBottom="124dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn7"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:width="75dp"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="9"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:width="75dp"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="6"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_marginBottom="276dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:width="90dp"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="90dp"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="90dp"
            android:text="3"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_clean"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:width="75dp"
            android:text="清除"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:width="75dp"
            android:text="下一个"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_in2"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorAccent"
        android:paddingVertical="5dp"
        android:shadowColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/tv_shi"
        app:layout_constraintTop_toBottomOf="@+id/tv_count" />

</android.support.constraint.ConstraintLayout>
